<% include ../partials/header %>

	<div class="container my-4">
		<div class="row">
			<div class="col-12 col-md-3">
				<div class="container">
					<div class="row">
						<div class="col-4 col-md-12 center mb-3">
							<a class="h6" href="/profile/<%= user_id %>">Edit Profile</a>
						</div>
						<div class="col-4 col-md-12 center mb-3">
							<a class="h6" href="/profile/<%= user_id %>/photo">Photo</a>
						</div>
						<div class="col-4 col-md-12 center mb-3">
							<a class="h6 active" href="/profile/<%= user_id %>/password">Security</a>
						</div>
					</div>
				</div>
			</div>
			<div class="col-12 col-md-9">
				<div class="container">
					<div class="card">
						<div class="card-header">
							<h6 class="title-bold">Security</h6>
						</div>
						<div class="card-body">
							<span id="change_password_error" class="alert alert-danger"></span>
							<% if(error != ""){ %>
							<div class="alert alert-danger"><%= error %></div>
							<% } %>
							<% if(success != ""){ %>
							<div class="alert alert-success"><%= success %></div>
							<% } %>
							<form id="change_password_form" action="/profile/<%= user_id %>/password?_method=PUT" method="POST"> 
								<div class="form-group">
									<div class="row">
										<div class="col-12 col-md-4">
											<label class="mr-auto">Old Password</label>
										</div>
										<div class="col-12 col-md-8">
											<input class="ml-auto form-control" id="old_password" type="password" name="old_password">
										</div>
									</div>
									<small id="old_password_error" class="error" style="margin-left:14.7em"></small>
								</div>
								<div class="form-group">
									<div class="row">
										<div class="col-12 col-md-4">
											<label class="mr-auto">New Password</label>
										</div>
										<div class="col-12 col-md-8">
											<input class="ml-auto form-control" id="new_password" type="password" name="new_password">
										</div>
									</div>
									<small style="margin-left:14.7em" id="new_password_error" class="error"></small>
								</div>
								<div class="form-group">
									<div class="row">
										<div class="col-12 col-md-4">
											<label class="mr-auto">Confirm Password</label>
										</div>
										<div class="col-12 col-md-8">
											<input class="form-control" id="confirm_password" type="password" name="confirm_password">
										</div>
									</div>
									<small style="margin-left:14.7em" id="confirm_password_error" class="error"></small>
								</div>	
							</form>
							<button id="passwordchange" class="btn btn-little-black" type="submit">Save Password</button>
						</div>
					</div>
				</div>
			</div>
		</div>

<% include ../partials/footer %>
